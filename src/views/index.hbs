<div class="row">
    <div class="col-md-4">
        <form action="/send-sms" method="POST" class="card card-body">
            <div class="form-group">
                <input type="text" name="message" class="form-control" placeholder="Write your message" autofocus>
            </div>
            <div class="form-group">
                <input type="tel" name="phone" class="form-control" placeholder="+56 9 0000 0000" autocomplete="off">
            </div>
            <button class="btn btn-primary btn-block">
                send
            </button>
        </form>
    </div>
    <div class="col-md-8">
        {{#if messages}}
            <ul class="list-group" style="height: 70vh; overflow-y: auto;" id="messages">
                {{#each messages}}
                    <li class="list-group-item list-group-item-info list-group-item-action">
                        <p>{{Body}}</p>
                        <span>{{_id}}</span>
                        <span>{{To}}</span>
                        <span>{{From}}</span>
                        <span>{{timeago createdAt}}</span>
                    </li>
                {{/each}}
            </ul>
        {{else}}
        <p>No messages yet</p>
        {{/if}}
    </div>
</div>